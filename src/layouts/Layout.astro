---
import "../styles/globals.css";

type Props = {
    title: string,
}

const { title } = Astro.props
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title> {title} </title>
    </head>
    <body>
        <slot />
    </body>
</html>