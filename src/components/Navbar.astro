---
import type { MenuItem } from "../types";

type Props = {
    menuItems: MenuItem[],
}

const { menuItems } = Astro.props
---

<nav class="flex flex-row items-center gap-4">
    {
        menuItems.map((item) => (
            <a
            class="
            uppercase mx-4 my-1 font-semibold tracking-wide text-primary text-md
            border-b border-accent border-opacity-0 transition duration-500 hover:border-opacity-100
            "
            href={item.path}
            >
                {item.name}
            </a>
        ))
    }
</nav>