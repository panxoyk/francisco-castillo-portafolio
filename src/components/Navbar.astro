---
import type { MenuItem } from "../types";

type Props = {
    menuItems: MenuItem[],
}

const { menuItems } = Astro.props
---

<nav class="flex flex-col md:flex-row items-center gap-8 md:gap-4 mb-8 md:m-0">
    {
        menuItems.map((item) => (
            <a
            class="
            uppercase mx-4 my-1 font-semibold tracking-wide text-primary text-base
            "
            href={item.path}
            >
                {item.name}
            </a>
        ))
    }
</nav>