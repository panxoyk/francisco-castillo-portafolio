---
type Props = {
    label: string,
    href?: string,
}

const { label, href } = Astro.props
---

<a
href={href}
class="
    cursor-pointer font-semibold relative z-10 border border-black border-opacity-50 bg-accent text-white px-6 py-3
    rounded-full w-full sm:w-fit text-center hover:brightness-125 transition ease-in duration-300
">
    {label}
</a>