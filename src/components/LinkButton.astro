---
type Props = {
    label: string,
    href?: string,
}

const { label, href } = Astro.props
---

<a
href={href}
class="cursor-pointer font-semibold overflow-hidden relative z-10 border border-black bg-background group px-6 py-3 rounded-full w-full sm:w-fit text-center shadow shadow-black"
>
    <span class="relative z-10 text-black group-hover:text-background text-base tracking-wide duration-500"> {label} </span>
    <span class="absolute w-full h-full bg-accent -left-full top-0 group-hover:left-0 duration-500"></span>
</a>