---
type Props = {
    label: string;
    href?: string;
};

const { label, href } = Astro.props;
---

<a
    href={href}
    class="w-full sm:w-fit px-6 py-3 font-semibold text-center text-white bg-accent relative z-10
    border border-black border-opacity-50 rounded-full hover:brightness-150 transition ease-in duration-300 cursor-pointer"
>
    {label}
</a>
