---
import { baseUrl } from 'src/config';

type Props = {
    label: string;
    href?: string;
    variant?: "primary" | "secondary";
    visitWeb?: boolean;
};

const { label, href, variant, visitWeb } = Astro.props;

let hrefUrl: string = `${baseUrl}/${href}`;
if (visitWeb && href) {
    hrefUrl = href;
};

let className: string = "";
switch (variant) {
    case "secondary":
        className =
            "text-muted font-semibold bg-primary rounded-lg py-2 hover:text-white hover:scale-105 transition duration-300 ease-in";
        break;
    default:
        className =
            "se:w-fit px-6 py-3 font-semibold text-white bg-accent text-xl border border-white rounded-lg hover:brightness-125 hover:border-primary transition ease-in duration-300";
        break;
}
---

<a href={hrefUrl} class={`w-full cursor-pointer text-center ${className}`}>
    {label}
</a>
