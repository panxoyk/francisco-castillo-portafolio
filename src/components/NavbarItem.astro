---
// TYPES
import type { Section } from "../types";

type Props = {
    section: Section;
};

const { section } = Astro.props;
---

<a
    class="NAV-LINK uppercase p-2 pb-0 font-semibold text-primary text-base w-fit text-center group transition duration-300"
    href={section.path}
>
    {section.name}
    <span
        class="mt-1 block max-w-0 group-hover:max-w-full transition-all ease-in duration-300 h-0.5 bg-primary"
    ></span>
</a>
