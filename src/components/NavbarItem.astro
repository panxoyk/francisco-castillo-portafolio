---
import type { MenuItem } from "../types";

type Props = {
    menuItem: MenuItem,
}

const { menuItem } = Astro.props
---

<a
class="uppercase p-2 pb-0 font-semibold tracking-wide text-primary text-base w-fit text-center group transition duration-300"
href={menuItem.path}
>
    {menuItem.name}
    <span class="mt-1 block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-primary"></span>
</a>