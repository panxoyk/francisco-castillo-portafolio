---
// COMPONENTS
import Container from "@components/Container.astro";
import LinkButton from "@components/LinkButton.astro";
import MailIcon from "@components/icons/MailIcon.astro";
import ProfileImage from "@components/images/ProfileImage.astro";
import SendEmailScript from "@components/scripts/sendEmailScript.astro";

// DATA
import { email } from "@data/socials";
---

<section id="home" class="pt-32 pb-8">
    <Container>
            <div
                class="flex flex-col-reverse md:flex-row md:justify-between md:items-center"
            >
                <div>
                    <p
                        id="send-email"
                        class="gap-2 flex flex-row items-center mx-0 font-semibold text-base md:text-lg pt-8 text-primary
                        opacity-50 text-pretty se:text-nowrap hover:opacity-100 transition ease-in duration-300 cursor-pointer w-fit"
                    >
                        <MailIcon class="size-6" />
                        {email}
                    </p>
                    <h1
                        class="py-4 text-6xl lg:text-7xl font-extrabold text-primary text-left text-pretty md:text-balance"
                    >
                        Francisco Castillo H.
                    </h1>
                    <p class="text-xl text-primary">
                        Desarrollador de software
                    </p>
                    <div class="flex justify-start my-4">
                        <LinkButton
                            label="Descargar CV"
                            href="CV-Francisco-Castillo.pdf"
                        />
                    </div>
                </div>
                <picture
                    class="flex items-center justify-start md:justify-end w-full"
                >
                    <ProfileImage />
                </picture>
            </div>
    </Container>
</section>
<SendEmailScript />
