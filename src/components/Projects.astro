---
// COMPONENTS
import Container from "./Container.astro";
import ProjectPreview from "./ProjectPreview.astro";

// DATA
import { projects } from "../data/projects";
---

<section id="projects" class="pt-24 pb-8">
    <Container>
        <div class="flex flex-col gap-8">
            <h2 class="py-4 text-3xl se:text-5xl lg:text-6xl font-bold text-primary text-left text-balance">Proyectos</h2>
            <div class="flex flex-col gap-4 w-full overflow-hidden">
                {projects.map((project) => <ProjectPreview project={project} />)}
            </div>
        </div>
    </Container>
</section>
